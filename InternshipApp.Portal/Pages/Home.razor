@page "/"

@namespace InternshipApp.Portal.Views
@using Syncfusion.Blazor.Buttons
@using Syncfusion.Blazor.Popups

<PageTitle>Home</PageTitle>

@if (string.IsNullOrEmpty(LoginUser?.UserName))
{
    <h1>
        Hello!
    </h1>
    <h6>Welcome to Internship App! Please login!</h6>
    <button @onclick=@ToggleLogin>
        Login
    </button>

}
else
{
    <h1>
        Hello @(LoginUser?.FullName)!
    </h1>
    <h6>Welcome to Internship App!</h6>
}

<SfDialog Height="@(IsLogin? "35%" : "80%")" Width="35%" Target="#target" ShowCloseIcon="true" @bind-Visible="Visible" >
    <DialogTemplates>
        <Header>
            <div>@(IsLogin ? "Login" : "Register As Student")</div>
        </Header>
        <Content>
            <Stack Style="width:100%;height:100%">
                @if (IsLogin)
                {
                    <FluentTextField @bind-Value=@Username Placeholder="Your Username">
                        <label>Username</label>
                    </FluentTextField>

                    <FluentTextField @bind-Value=@Password TextFieldType="TextFieldType.Password" Placeholder="Your password">
                        <label>Password</label>
                    </FluentTextField>

                    <label class="login-msg">
                        @LoginMsg
                    </label>

                    <br />

                    <SfButton Content="Login" OnClick="OnLoginButtonClicked"/>

                    <br />

                    <span>
                        Don't have account? Register as student: 
                        <button class="text-btn" @onclick=@ToggleRegister>
                            Register
                        </button>
                    </span>
                    
                }
                else
                {
                    <FluentTextField @bind-Value=@Name Placeholder="Your Name">
                        <label>Name</label>
                    </FluentTextField>

                    <FluentTextField Value=@StudentId Placeholder="Your Id" @onchange=@OnStudentIdChanged>
                        <label>Student Id</label>
                    </FluentTextField>

                    <FluentTextField @bind-Value=@Email Placeholder="Your Contact Email">
                        <label>Email</label>
                    </FluentTextField>

                    <FluentNumberField TValue=@int @bind-Value=@Year Placeholder="Student Year">
                        <label>Year</label>
                    </FluentNumberField>

                    <FluentNumberField TValue=@int @bind-Value=@Credits Placeholder="Credits Acchieved">
                        <label>Credits</label>
                    </FluentNumberField>

                    <FluentNumberField TValue=@Double @bind-Value=@GPA Placeholder="Accumulated Gpa">
                        <label>Gpa</label>
                    </FluentNumberField>

                    <FluentTextField @bind-Value=@Username Placeholder="Your Username">
                        <label>Username</label>
                    </FluentTextField>

                    <FluentTextField @bind-Value=@Password TextFieldType="TextFieldType.Password" Placeholder="Your password">
                        <label>Password</label>
                    </FluentTextField>

                    <label class="login-msg">
                        @LoginMsg
                    </label>

                    <br />

                    <SfButton Content="Reset Fields" OnClick="OnResetRegForm"/>

                    <br />

                    <SfButton Content="Create Account" OnClick="OnRegisterButtonClicked"/>

                    <br />

                    <span>
                        Already have account? Login:
                        <button class="text-btn" @onclick=@ToggleRegister>
                            Login
                        </button>
                    </span>
                    
                }
            </Stack>
        </Content>
        <FooterTemplate>
            <div>International University - Internship App</div>
        </FooterTemplate>
    </DialogTemplates>
</SfDialog>

<style>
    .login-msg{
        color:darkred;
    }
    .text-btn{
        color:mediumblue;
        background:none;
        border:none;
        
    }
    .text-btn:hover{
        color:mediumblue;
        background:none;
        border:none;
    }
</style>