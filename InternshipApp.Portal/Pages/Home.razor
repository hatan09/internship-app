@page "/"

@namespace InternshipApp.Portal.Views
@using Syncfusion.Blazor.Buttons
@using Syncfusion.Blazor.Popups

<PageTitle>Home</PageTitle>

@if (string.IsNullOrEmpty(LoginUser?.UserName))
{
    <h1>
        Hello! Please Login!
    </h1>
}
else
{
    <h1>
        Hello @(LoginUser?.FullName)!
    </h1>
}

Welcome to Internship App!

<SfDialog Height="50%" Width="50%" Target="#target" ShowCloseIcon="true" @bind-Visible="Visible" >
        <DialogTemplates>
            <Header>
                <div>Login</div>
            </Header>
            <Content>
                <Stack Style="width:100%;height:100%">
                    <FluentTextField @bind-Value=@Username Placeholder="Your Username">
                    <label>Username</label>
                    </FluentTextField>

                    <FluentTextField @bind-Value=@Password TextFieldType="TextFieldType.Password" Placeholder="Your password">
                        <label>Password</label>
                    </FluentTextField>

                    <br />

                    <SfButton Content="Login" OnClick="OnLoginButtonClicked"/>
                </Stack>
            </Content>
            <FooterTemplate>
                <div>International University - Internship App</div>
            </FooterTemplate>
        </DialogTemplates>
        @*<DialogEvents OnOpen="@BeforeDialogOpen" Closed="@DialogClosed"></DialogEvents>*@
    </SfDialog>
