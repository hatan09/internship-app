@namespace InternshipApp.Portal.Views
@using Syncfusion.Blazor.DropDowns
@using Syncfusion.Blazor.Inputs
@using Syncfusion.Blazor.Lists

<h1> Jobs </h1>

<Stack Horizontal=true>
    <SfTextBox CssClass="search-text-box">

    </SfTextBox>

    <SfMultiSelect @ref="SfMultiSelect" TValue="string[]" AllowFiltering="true" TItem="Option" Mode="@VisualMode.CheckBox" Width="250px" Placeholder="Search for skills" DataSource="@this.States.Options" ShowSelectAll="@true"
               EnableSelectionOrder="@true" FilterBarPlaceholder="Search for skills" EnableGroupCheckBox="@true" PopupHeight="350px">
    <MultiSelectEvents TItem="Option" TValue="string[]" ValueChange="@FilterChangeHandler"></MultiSelectEvents>
    <MultiSelectFieldSettings GroupBy="Category" Value="Title"></MultiSelectFieldSettings>
</SfMultiSelect>
</Stack>

<SfListView TValue="JobListRowViewStates" ID="job-list" DataSource="@States.Items" HeaderTitle="Jobs" ShowHeader CssClass="e-list-template">
    <ListViewFieldSettings TValue="JobListRowViewStates" Id="job-list" Text="Text"></ListViewFieldSettings>
    <ListViewTemplates TValue="JobListRowViewStates">
        <Template>
            <Stack Horizontal=false ClassName="list-view-item">
                <h3><b> @((context as JobListRowViewStates).Title) </b></h3>
                <lable> @((context as JobListRowViewStates).Company) </lable>
                <lable> @((context as JobListRowViewStates).Description) </lable>
                <SkillTagList JobSkills=@((context as JobListRowViewStates).JobSkills)/>
            </Stack>
        </Template>
    </ListViewTemplates>
</SfListView>

<style>
    .list-view-item{
        padding: 5px
    }

    .e-headertext{
        font-size: 20pt
    }
</style>