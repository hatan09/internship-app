@namespace InternshipApp.Portal.Views

<Stack Horizontal>
    <div class="e-avatar e-avatar-xlarge image"></div>
    <Stack Horizontal=false Style="margin-left:20px">
        <h1>
            @States.Title
        </h1>

        <h3>
            @States.Address
        </h3>

        <h3>
            @States.CompanyType
        </h3>

        <a href="https://google.com" target="blank">
            Company website
        </a>
    </Stack>
</Stack>

<br />

<Stack>
    <h1>
        About
    </h1>

    <label>
        @States.Description
    </label>
</Stack>

<style>
    .e-avatar.image {
        background-image: url("https://i.imgur.com/xQQXVYs_d.webp?maxwidth=760&fidelity=grand");
    }

    .e-avatar.e-avatar-xlarge{
        border-radius:3%;
