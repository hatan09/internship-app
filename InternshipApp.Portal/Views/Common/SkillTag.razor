@namespace InternshipApp.Portal.Views
@using Syncfusion.Blazor.Buttons
@using Syncfusion.Blazor.Popups

@if (IsEditButton)
{
    <SfTooltip ID="skill-tag-tooltip" Content="@Description">
        <SfButton CssClass="skill" IconCss="@Name"/>
    </SfTooltip>
}
else
{
    <SfTooltip ID="skill-tag-tooltip" Content="@Description">
        <SfButton Content="@Name" CssClass="skill" OnClick="OnClicked"/>
    </SfTooltip>
}

 <style>
    .e-btn.skill{
        min-width: 50px;
        margin: 0px 10px 0px 0px;
    }
</style>
