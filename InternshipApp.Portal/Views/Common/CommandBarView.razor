@namespace InternshipApp.Portal.Views
@using Syncfusion.Blazor.Buttons
@using Syncfusion.Blazor.Popups

<Stack 
    Horizontal 
    ClassName="command-bar"
    VerticalAlign="Wave5.UI.Alignment.Center" 
    HorizontalAlign="Wave5.UI.Alignment.Center">

    @if (IsEditButtonVisible)
    {
        <SfTooltip Content="Edit profile">
            <SfButton IconCss="oi oi-pencil" CssClass="command-bar-button edit"/>
        </SfTooltip>
    }

    @if (IsAcceptButtonVisible)
    {
        <SfTooltip Content="Accept">
            <SfButton IconCss="oi oi-check" CssClass="command-bar-button accept"/>
        </SfTooltip>
    }

    @if (IsChatButtonVisible)
    {
        <SfTooltip Content="Chat with this student">
            <SfButton IconCss="oi oi-chat" CssClass="command-bar-button chat"/>
        </SfTooltip>
    }

    @if (IsEmailButtonVisible)
    {
        <SfTooltip Content="Send email to this student">
            <SfButton IconCss="oi oi-envelope-closed" CssClass="command-bar-button email"/>
        </SfTooltip>
    }

    @if (IsEmailButtonVisible)
    {
        <SfTooltip Content="Reject this student">
            <SfButton IconCss="oi oi-x" CssClass="command-bar-button reject"/>
        </SfTooltip>
    }
</Stack>

<style>
    .command-bar{
        padding:20px 100px;
        border-radius: 6px; 
        border: solid;
        border-color:gray;
        border-width:thin;
    }

    .e-input-group.e-control-wrapper.command-bar-button{
        font-size: 30pt;
    }

    .command-bar-button.edit.e-input-group.e-control-wrapper .e-input-group-icon, 
    .command-bar-button.edit.e-input-group.e-control-wrapper .e-input-group-icon:hover, 
    .command-bar-button.edit.e-input-group.e-control-wrapper .e-input-group-icon:active, 
    .command-bar-button.edit.e-date-wrapper span.e-input-group-icon.e-date-icon.e-icons.e-active { 
        color: gray;
    } 

    .command-bar-button.accept.e-input-group.e-control-wrapper .e-input-group-icon, 
    .command-bar-button.accept.e-input-group.e-control-wrapper .e-input-group-icon:hover, 
    .command-bar-button.accept.e-input-group.e-control-wrapper .e-input-group-icon:active, 
    .command-bar-button.accept.e-date-wrapper span.e-input-group-icon.e-date-icon.e-icons.e-active { 
        color: forestgreen; 
    } 

    .command-bar-button.email.e-input-group.e-control-wrapper .e-input-group-icon, 
    .command-bar-button.email.e-input-group.e-control-wrapper .e-input-group-icon:hover, 
    .command-bar-button.email.e-input-group.e-control-wrapper .e-input-group-icon:active, 
    .command-bar-button.email.e-date-wrapper span.e-input-group-icon.e-date-icon.e-icons.e-active { 
        color: gray;
    } 

    .command-bar-button.chat.e-input-group.e-control-wrapper .e-input-group-icon, 
    .command-bar-button.chat.e-input-group.e-control-wrapper .e-input-group-icon:hover, 
    .command-bar-button.chat.e-input-group.e-control-wrapper .e-input-group-icon:active, 
    .command-bar-button.chat.e-date-wrapper span.e-input-group-icon.e-date-icon.e-icons.e-active { 
        color: blue;
    } 

    .command-bar-button.reject.e-input-group.e-control-wrapper .e-input-group-icon, 
    .command-bar-button.reject.e-input-group.e-control-wrapper .e-input-group-icon:hover, 
    .command-bar-button.reject.e-input-group.e-control-wrapper .e-input-group-icon:active, 
    .command-bar-button.reject.e-date-wrapper span.e-input-group-icon.e-date-icon.e-icons.e-active { 
        color: red;
    } 

    .command-bar-button{
        background-color:transparent;
        border:none;
        width: 70px;
        height: 40px;
    }
    .command-bar-button:hover{
        background-color:transparent;
        border:none;
    }
    .command-bar-button:focus{
        background-color:transparent;
        border:none;
    }
</style>