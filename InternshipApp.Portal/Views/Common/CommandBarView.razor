@namespace InternshipApp.Portal.Views
@using Syncfusion.Blazor.Buttons
@using Syncfusion.Blazor.Popups

<Stack 
    Horizontal 
    ClassName="command-bar"
    VerticalAlign="Wave5.UI.Alignment.Center" 
    HorizontalAlign="Wave5.UI.Alignment.Center">

    @if (IsEditButtonVisible)
    {
        <SfTooltip Content="Edit profile basic info">
            <SfButton IconCss="oi oi-pencil" CssClass="command-bar-button edit" OnClick="@EditCallback"/>
        </SfTooltip>
    }

    @if (IsAcceptButtonVisible)
    {
        <SfTooltip Content="Accept this student">
            <SfButton IconCss="oi oi-check" CssClass="command-bar-button accept" OnClick="@AcceptCallback"/>
        </SfTooltip>
    }

    @if (IsChatButtonVisible)
    {
        <SfTooltip Content="Chat with this student">
            <SfButton IconCss="oi oi-chat" CssClass="command-bar-button chat" OnClick="@ChatCallback"/>
        </SfTooltip>
    }

    @if (IsSendEmailButtonVisible)
    {
        <SfTooltip Content="Send email to this student">
            <SfButton IconCss="oi oi-envelope-closed" CssClass="command-bar-button email" OnClick="@SendEmailCallback"/>
        </SfTooltip>
    }

    @if (IsAddGroupButtonVisible)
    {
        <SfTooltip Content="Add this student to my group">
            <SfButton IconCss="oi oi-plus" CssClass="command-bar-button add-group" OnClick="@AddGroupCallback"/>
        </SfTooltip>
    }

    @if (IsRejectButtonVisible)
    {
        <SfTooltip Content="Reject this student">
            <SfButton IconCss="oi oi-x" CssClass="command-bar-button reject" OnClick="@RejectCallback"/>
        </SfTooltip>
    }

    @if (IsApplyListButtonVisible)
    {
        <SfTooltip Content="See apply status">
            <SfButton IconCss="oi oi-script" CssClass="command-bar-button apply" OnClick="@ApplyListCallback" />
        </SfTooltip>
    }

    @if (IsShowScoreButtonVisible)
    {
        <SfTooltip Content="Check progress">
            <SfButton IconCss="oi oi-graph" CssClass="command-bar-button score" OnClick="@ShowScoreCallback" />
        </SfTooltip>
    }

    @if (IsFinishButtonVisible)
    {
        <SfTooltip Content="Finish intern program">
            <SfButton IconCss="oi oi-circle-check" CssClass="command-bar-button finish" OnClick="@FinishCallback" />
        </SfTooltip>
    }

    @if (IsViewEvaluationButtonVisible)
    {
        <SfTooltip Content="View Evaluations from your company">
            <SfButton IconCss="oi oi-bar-chart" CssClass="command-bar-button evaluation" OnClick="@ViewEvaluationCallback" />
        </SfTooltip>
    }

    @if (IsViewFinalFormsVisible)
    {
        <SfTooltip Content="View the final evaluation forms">
            <SfButton IconCss="oi oi-book" CssClass="command-bar-button final" OnClick="@ViewFinalFormsCallback" />
        </SfTooltip>
    }

    @if (IsViewResultButtonVisible)
    {
        <SfTooltip Content="View result">
            <SfButton IconCss="oi oi-document" CssClass="command-bar-button result" OnClick="@ViewResultCallback" />
        </SfTooltip>
    }

    @if (IsUndoButtonVisible)
    {
        <SfTooltip Content="Re-validate this student">
            <SfButton IconCss="oi oi-action-undo" CssClass="command-bar-button undo" OnClick="@UndoCallback" />
        </SfTooltip>
    }
</Stack>

<style>
    .command-bar{
        padding:20px 100px;
        border-radius: 6px; 
        border: solid;
        border-color:gray;
        border-width:thin;
    }

    .e-btn.command-bar-button .e-btn-icon, 
    .e-css.e-btn.command-bar-button .e-btn-icon {
        font-size: 30pt;
    }

    .oi-pencil.e-btn-icon{
        color: gray; 
    }

    .oi-check.e-btn-icon{
        color: forestgreen; 
    }

    .oi-chat.e-btn-icon{
        color: gray; 
    }

    .oi-plus.e-btn-icon{
        color: forestgreen; 
    }

    .oi-envelope-closed.e-btn-icon{
        color: steelblue; 
    }

    .oi-x.e-btn-icon{
        color: indianred; 
    }

    .oi-script.e-btn-icon {
        color: steelblue;
    }

    .oi-graph.e-btn-icon {
        color: forestgreen;
    }

    .oi-circle-check.e-btn-icon {
        color: yellow;
    }

    .oi-document.e-btn-icon {
        color: deepskyblue;
    }

    .oi-book.e-btn-icon {
        color: saddlebrown;
    }

    .oi-bar-chart.e-btn-icon {
        color: forestgreen;
    }

    .oi-action-undo.e-btn-icon {
        color: steelblue;
    }

    .command-bar-button{
        background-color:transparent;
        border:none;
        width: 80px;
        height: 60px;
    }
    .command-bar-button:hover{
        background-color:transparent;
        border:none;
    }
    .command-bar-button:focus{
        background-color:transparent;
        border:none;
    }
</style>