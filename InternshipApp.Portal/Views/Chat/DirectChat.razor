@namespace InternshipApp.Portal.Views

<h1>Blazor Chat</h1>

<div class="container">
    <div class="row">
        <div class="col-4">
            <label for="userInput">User</label>
            <input id="userInput" @bind="@user" />
        </div>
    </div>
    <div class="row">
        <div class="col-8">
            <ul id="messagesList">
                @foreach (var message in messages)
                {
                        <li>@message</li>
                }
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col-8">
            <input id="messageInput" @bind="@message" />
            <button id="sendButton" @onclick="@Send">Send</button>
        </div>
    </div>
</div>