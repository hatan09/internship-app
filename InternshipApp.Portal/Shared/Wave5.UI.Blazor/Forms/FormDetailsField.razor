@namespace Wave5.UI

@if (AsTextArea) {
    <StackItem><strong>@Label</strong></StackItem>
    <StackItem style="max-width:500px;">@Value</StackItem>
}
else {
    <Stack Horizontal=@true
           Tokens=@(new StackTokens { ChildrenGap = new[] { 15.0 }, Padding="5px 2px" })>
        <StackItem style="width:140px"><strong>@Label</strong></StackItem>
        <StackItem>@Value</StackItem>
    </Stack>
}
